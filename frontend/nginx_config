server {
  listen 80 default_server;
  listen [::]:80 default_server;

  root /var/www/Japanese-Food-Database/frontend;

  index index.html;

  server_name food.myjapandb.com  www.food.myjapandb.com;

  location / {
    try_files $uri $uri/ =404;
  }
}

server {
  listen 80;
  listen [::]:80;

  server_name api.myjapandb.com www.api.myjapandb.com;

  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $http_host;
    proxy_pass http://127.0.0.1:5000;
  }
}